{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2022",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES2022"],
    "jsx": "react-jsx",
    "paths": {
      "@plannotator/editor": ["../../packages/editor/App.tsx"],
      "@plannotator/editor/*": ["../../packages/editor/*"],
      "@plannotator/ui/*": ["../../packages/ui/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
